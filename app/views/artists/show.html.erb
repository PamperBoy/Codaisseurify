
<div class="">
  <%= image_tag@artist.image.source.thumbnail%>
  <h1><%= @artist.name %></h1>

  <%= link_to "Update artist",
        edit_artist_path(@artist),
              class:        "btn btn-default" %>
  <%= link_to 'Delete',
        artist_path(@artist),
              class:        "btn btn-danger",
              method:       :delete,
              data:         { confirm: 'Are you sure?' } %>
</div>

<hr>



<a class="btn btn-danger"
  data-confirm="Are you sure?"
  id="delete-all-songs">
    <span class="glyphicon glyphicon-trash"></span>
    Remove all songs
</a>


<table class="table table-striped" id="artistSongs">
  <tr>
    <th colspan="2">Songs</th>
  </tr>
    <% @artist.songs.each do | song |  %>
    <tr data-id=<%=song.id%>>
      <td><%= song.name %></td>
      <td style="text-align: right;">
        <a class="btn btn-danger glyphicon glyphicon-trash song-delete" id="song-<%=song.id%>"></a>
    <% end%>
</table>


<%= render "shared/form", song: @song %>
<%= link_to "Back", root_path, class: "btn btn-default" %>


