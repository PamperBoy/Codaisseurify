
<h1><%= @artist.name %></h1>
<%= link_to "Update artist", edit_artist_path(@artist), class: "btn btn-default" %>

<%= image_tag @artist.image.source %>
<% @artist.songs.each do | song |  %>
  <p><%= song.name %></p>
  <%= link_to 'Delete',
          artist_song_path(@artist, song),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
<% end%>

<%= link_to "Add song", new_artist_song_path(@artist), class: "btn btn-primary" %>

<%= link_to "Back", root_path, class: "btn btn-default" %>
